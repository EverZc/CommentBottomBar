<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#fff" />
        </shape>
    </item>
    <!-- 主体背景颜色值 --><!-- 此处定义只有上下两边有边框 高度为1像素-->
    <item
        android:left="14dp"
        android:right="14dp">
        <!--边框里面背景颜色 白色-->
        <shape>
            <size
                android:height="0.25dp" />
            <solid android:color="#e8e8e8" />
        </shape>
    </item>
</layer-list>