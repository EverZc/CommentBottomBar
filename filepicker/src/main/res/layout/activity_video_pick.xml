<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_video_pick"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_title_height"
        android:background="@color/colorTop"
        android:theme="@style/ToolbarTheme"
        app:titleTextColor="#FFFFFF"
        app:navigationIcon="@mipmap/button_top_back_release" />

    <View
        android:id="@+id/rv_top_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tb_video_pick"
        android:background="@color/BgRv" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_video_pick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rv_top_divider"
        android:background="@color/BgRv" />

</RelativeLayout>
